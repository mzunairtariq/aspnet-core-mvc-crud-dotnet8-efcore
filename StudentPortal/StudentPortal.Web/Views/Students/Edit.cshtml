@model StudentPortal.Web.Models.Entities.Students

<h1>Edit Student Record</h1>

@if (Model != null)
{
    <form asp-controller="Students" asp-action="Edit" method="post" class="mt-3" id="editStudentForm">
        <!-- Renamed form id to "editStudentForm" -->
        <div class="form-group">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="form-group">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
                <label class="form-check-label" for="Subscribed">Subscribed</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>

        <button type="submit" class="btn btn-danger mt-3 ms-3"
                asp-action="Delete"
                asp-controller="Students">
            Delete Record
        </button>
    </form>
}
else
{
    <p>No Student found with this ID</p>
}

@section Scripts
{
    <!--
        Client-side validation for this page is enabled using jQuery, jQuery Validation,
        and jQuery Validation Unobtrusive. The necessary script imports for these libraries
        are included in the shared layout file (_Layout.cshtml). There is no need to import
        these scripts again in this page to avoid redundancy and optimize performance.
    -->

    <script>
        $(document).ready(function () {
            $('#editStudentForm').validate(); // Renamed form id in the script to "editStudentForm"
        });
    </script>
}
